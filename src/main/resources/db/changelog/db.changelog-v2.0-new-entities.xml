<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="v2-001-create-customer" author="cascade">
        <createTable tableName="CUSTOMER">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="address" type="VARCHAR(500)"/>
            <column name="latitude" type="DOUBLE"/>
            <column name="longitude" type="DOUBLE"/>
            <column name="preferred_time_slot" type="VARCHAR(255)"/>
        </createTable>
        <createIndex tableName="CUSTOMER" indexName="idx_customer_name">
            <column name="name"/>
        </createIndex>
        <rollback>
            <dropIndex indexName="idx_customer_name" tableName="CUSTOMER"/>
            <dropTable tableName="CUSTOMER"/>
        </rollback>
    </changeSet>

    <changeSet id="v2-003-create-delivery-history" author="cascade">
        <createTable tableName="DELIVERY_HISTORY">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="delivery_id" type="BIGINT"/>
            <column name="customer_id" type="BIGINT"/>
            <column name="tour_id" type="BIGINT"/>
            <column name="delivery_date" type="DATE"/>

            <column name="planned_time" type="TIMESTAMP"/>
            <column name="actual_time" type="TIMESTAMP"/>
            <column name="delay_in_minutes" type="INT"/>
            <column name="day_of_week" type="VARCHAR(10)"/>

            <column name="actual_delivery_address" type="VARCHAR(500)"/>
            <column name="actual_latitude" type="DOUBLE"/>
            <column name="actual_longitude" type="DOUBLE"/>
            <column name="preferred_time_slot" type="VARCHAR(50)"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="DELIVERY_HISTORY"
                                 baseColumnNames="delivery_id"
                                 referencedTableName="DELIVERY"
                                 referencedColumnNames="id"
                                 constraintName="fk_hist_delivery"/>
        <addForeignKeyConstraint baseTableName="DELIVERY_HISTORY"
                                 baseColumnNames="customer_id"
                                 referencedTableName="CUSTOMER"
                                 referencedColumnNames="id"
                                 constraintName="fk_hist_customer"/>
        <addForeignKeyConstraint baseTableName="DELIVERY_HISTORY"
                                 baseColumnNames="tour_id"
                                 referencedTableName="TOUR"
                                 referencedColumnNames="id"
                                 constraintName="fk_hist_tour"/>

        <rollback>
            <dropForeignKeyConstraint baseTableName="DELIVERY_HISTORY" constraintName="fk_hist_delivery"/>
            <dropForeignKeyConstraint baseTableName="DELIVERY_HISTORY" constraintName="fk_hist_customer"/>
            <dropForeignKeyConstraint baseTableName="DELIVERY_HISTORY" constraintName="fk_hist_tour"/>
            <dropTable tableName="DELIVERY_HISTORY"/>
        </rollback>
    </changeSet>

</databaseChangeLog>